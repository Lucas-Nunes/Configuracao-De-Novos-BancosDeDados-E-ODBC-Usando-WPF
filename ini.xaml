<Window x:Class="TelaMain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuração de Novos Bancos de Dados e ODBC"
        Width="1200"
        Height="650" FontWeight="Bold">		    
    <Grid>
        <Grid x:Name="body">
            <Canvas x:Name="canvas1">
                <TextBox Width="1100" Height="30" 
                             Canvas.Left="30" Canvas.Top="30" 
                             Text="Filtrar por nome" 
                             FontSize="20" FontWeight="Bold" 
                             BorderBrush="Black" BorderThickness="1"
                             KeyDown="SearchTextBox_KeyDown"
                             TextChanged = "VerificarTexto"
                />
            </Canvas>
            <Canvas x:Name="canvas2"></Canvas>
            <Canvas x:Name="canvas3"></Canvas>
            <Canvas x:Name="canvas4"></Canvas>
			<Canvas x:Name="canvas4parte2"></Canvas>
			<Canvas x:Name="Rodape"></Canvas>
        </Grid>
    </Grid>
</Window>

